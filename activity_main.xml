<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doggy"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/msgTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/allura"
        android:text="Aashiyana"
        android:textColor="#D5302E6C"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="serif"
        android:text="A home for every stray"
        android:textColor="#D5302E6C"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/msgTV"
        app:layout_constraintStart_toStartOf="@+id/msgTV"
        app:layout_constraintTop_toBottomOf="@+id/msgTV" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="350dp"
        android:layout_marginBottom="70dp"
        android:background="#66000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.67">

        <EditText
            android:id="@+id/user"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#E4E0E0"
            android:ems="10"
            android:hint="Enter your Name"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="#F4F0F0"
            android:textColorHint="#F1EAEA" />

        <EditText
            android:id="@+id/pasword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#EFEBEB"
            android:ems="10"
            android:hint="Enter your Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#F6F3F3"
            android:textColorHint="#F8F5F5" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="300dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#5C0097"
            android:onClick="AdoptMe"
            android:text="Sign in"
            android:textAllCaps="false"
            app:cornerRadius="30dp"
            app:iconGravity="textStart" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="OR"
            android:textAlignment="center"
            android:textColor="#F4EFEF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/register"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:minHeight="48dp"
            android:onClick="Register"
            android:text="Create Account"
            android:textAlignment="center"
            android:textColor="#D5EFEFF1"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>